<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Your Todo App</title>
    <link rel="stylesheet" href="/assets/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js" type="text/javascript"></script>
    <script src="/assets/todoList.js" type="text/javascript"></script>
  </head>
  <body>
    <h1>My Todo List</h1>
    <div id="todo-table">
      <form id="todo-form">
        <input type="text" name="addToList" placeholder="Add new item..." required>
        <button type="submit" name="button">Add Item</button>
      </form>
      <ul>
        <% for(i=0; i<todos.length; i++){%>
          <li class="todo-item"><%= todos[i].item %></li>
        <%}%>
      </ul>
    </div>
  </body>
</html>
